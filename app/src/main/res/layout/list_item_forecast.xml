<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_content_margin"
        >
        <ImageView android:id="@+id/weather_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cloud_off_black_36dp"
            />
        <TextView android:id="@+id/day"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/weather_icon"
            android:layout_toRightOf="@id/weather_icon"
            android:layout_toStartOf="@id/max_temperature"
            android:layout_marginStart="@dimen/default_margin"
            android:textAppearance="@style/AppTheme.TextAppearance.Large"
            android:textStyle="bold"
            android:text="@string/undefined"
            />
        <TextView android:id="@+id/weather_condition"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/day"
            android:layout_toStartOf="@id/min_temperature"
            android:layout_alignStart="@id/day"
            android:layout_alignLeft="@id/day"
            android:textAppearance="@style/AppTheme.TextAppearance.Small"
            android:text="@string/undefined"
            />
        <TextView android:id="@+id/max_temperature"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAppearance="@style/AppTheme.TextAppearance.Medium"
            android:textStyle="bold"
            android:text="@string/temperature_degrees_format"
            />
        <TextView android:id="@+id/min_temperature"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="@style/AppTheme.TextAppearance.Small"
            android:text="@string/temperature_degrees_format"
            android:layout_below="@id/max_temperature"
            android:layout_alignEnd="@id/max_temperature"
            android:layout_alignRight="@id/max_temperature"
            />
    </RelativeLayout>
</layout>