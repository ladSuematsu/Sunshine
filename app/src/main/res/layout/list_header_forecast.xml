<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        android:background="@color/colorPrimary"
        >
        <TextView android:id="@+id/current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@id/weather_condition"
            android:layout_toLeftOf="@id/weather_condition"
            android:textAppearance="@style/AppTheme.TextAppearance.Small.Inverse"
            android:text="@string/date_text_format"
            />

        <TextView android:id="@+id/max_temperature"
            android:text="@string/temperature_degrees_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_date"
            android:layout_alignStart="@+id/current_date"
            android:layout_alignEnd="@id/current_date"
            android:layout_alignRight="@id/current_date"
            android:textAppearance="@style/AppTheme.TextAppearance.Huge.Inverse"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="10dp"
            />

        <TextView android:id="@+id/min_temperature"
            android:text="@string/temperature_degrees_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/max_temperature"
            android:layout_alignStart="@+id/current_date"
            android:layout_alignEnd="@id/current_date"
            android:layout_alignRight="@id/current_date"
            android:textAppearance="@style/AppTheme.TextAppearance.Large.Inverse"
            />

        <ImageView android:id="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/weather_condition"
            android:layout_alignStart="@id/weather_condition"
            android:layout_alignLeft="@id/weather_condition"
            android:layout_alignEnd="@id/weather_condition"
            android:layout_alignRight="@id/weather_condition"
            android:src="@drawable/ic_cloud_off_white_48dp"
            />

        <TextView android:id="@+id/weather_condition"
            android:text="@string/undefined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/min_temperature"
            android:textAppearance="@style/AppTheme.TextAppearance.Medium.Inverse"
            />
    </RelativeLayout>
</layout>